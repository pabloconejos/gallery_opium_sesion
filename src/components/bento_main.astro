    <div class="contenedor">
        <div class="bento">
            <section class="rounded-lg relative
                        backdrop-blur-md border
                        border-black/10 shadow-inner
                        shadow-white/10 overflow-hiddenn
                        transition-transform duration-300
                        inspiracion flex justify-start items-end">
                <img src="../../public/images/bento_main/roberopiumcasi.png" alt="1">
                <h1 class="absolute text-white text-1xl md:text-2xl lg:text-2xl font-bold flex flex-row p-4">INSPIRACION</h1>
                <a class="absolute w-full h-full" href="/inspiracion"></a>
            </section>
            <section class="rounded-lg relative
                            backdrop-blur-md border
                            border-black/10 shadow-inner
                            shadow-white/10 overflow-hidden
                            transition-transform duration-300 sesion_1 flex justify-start items-end">
                <img src="../../public/images/bento_main/Copia%20de%20IMG_4508.JPG" alt="2">
                <h1 class="absolute text-white text-1xl md:text-2xl lg:text-2xl font-bold flex justify-center flex-row p-4">SESION 1</h1>
                <a class="absolute w-full h-full" href="/sesion_1"></a>
            </section>
            <section class="rounded-lg relative
                            backdrop-blur-md border
                            border-black/10 shadow-inner
                            shadow-white/10 overflow-hidden
                            transition-transform duration-300 crear_carteles flex justify-start items-end">
                <img src="../../public/images/carteles/Capturadepantalla2024-02-052113.jpeg" alt="3">
                <h1 class="absolute text-white text-1xl md:text-2xl lg:text-2xl font-bold flex justify-center flex-row p-4">CARTELES</h1>
                <a class="absolute w-full h-full" href="/crear_carteles"></a>
            </section>
            <section class="rounded-lg relative
                            backdrop-blur-md border
                            border-black/10 shadow-inner
                            shadow-white/10 overflow-hidden
                            transition-transform duration-300 sesion_2 flex justify-start items-end">
                <img src="../../public/images/bento_main/Copia%20de%20IMG_4471.JPG" alt="4">
                <h1 class="absolute text-white text-1xl md:text-2xl lg:text-2xl font-bold flex justify-center flex-row p-4">SESION 2</h1>
                <a class="absolute w-full h-full" href="/sesion_2"></a>
