---
import Layout from "../layouts/Layout.astro";
import Header_home from "../components/header_home.astro";
import GoToHome from "../components/GoToHome.astro";

const personas = [
    {
        img: '/images/creditos/DSCN7833.jpg',
        nombre: "Hernan",
        do: ['Crear carteles', 'Edición', 'Grabación', 'Iluminación']

    },
    {
        img: '/images/creditos/DSCN7834.jpg',
        nombre: "Jaime",
        do: ['Iluminación', 'Grabación', 'Ubicaciones']
    },
    {
        img: '/images/creditos/DSCN7832.jpg',
        nombre: "Roberto",
        do: ['Modelo', 'Vestuario']
    },
    {
        img: '/images/creditos/DSCN7838.jpg',
        nombre: "Pablo",
        do: ['Desarrollo Web', 'Fotografia', 'Grabación', 'Vestuario']
    },
    {
        nombre: "Javier",
        img: '/images/creditos/DSCN7835.jpg',
        do: ['Iluminación', 'Grabación']
    },
    {
        nombre: "Max",
        img: '/images/creditos/DSCN7837.jpg',
        do: ['Iluminación', 'Grabación']
    },

]


---
<Layout title="Crear Carteles">
    <Header_home />
    <section class="p-4 w-full lg:w-[900px] mx-auto mt-16 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-4 py-3">

        {
            personas.map((p)=>(
                    <article>
                        <div class="relative">
                            <img class="aspect-auto" alt="Foto de colaborador" src={p.img}>
                            <section class="absolute w-full h-full bg-black/60 top-0 flex flex-col items-center opacity-1 hover:opacity-0 ease-in duration-200 hover:cursor-pointer">

                                <ul class="w-48 text-sm font-medium text-white rounded-lg m-auto">
                                    {
                                        p.do.map((d)=>(
                                                <li class="w-full px-4 py-2 border-b border-gray-200 text-white font-bold">{d}</li>
                                        ))
                                    }
                                </ul>

                            </section>
                        </div>

                        <h3 class="font-semibold py-1 text-white">{p.nombre}</h3>
                    </article>

            ))
        }

    </section>
    <GoToHome />
</Layout>

