<style>

    .contenedor{
        margin-top: 80px;
        width: 100vw;
        height: 90vh;
        display: flex;
        //justify-content: center;
        align-items: center;
        flex-direction: column;
        color: white;

    }

    section{
        border-radius: 10px;
        border: solid 0.5px #262626;
        overflow: hidden;
        transition: transform .3s;
    }



    section img{
        width: 100%;
        height: 100%;
        object-fit: cover;


    }

    .bento{

        height: 95%;
        width: 80%;

        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        gap: 16px;

    }

    section:hover{
        transform: scale(1.02);
        cursor: pointer;
    }

    .inspiracion{
        grid-column: 1 / 3;
        grid-row: 1 / 3;
    }

    .sesion_1{
    }

    .crear_carteles{
    }

    .sesion_2{
    }

    .contenido_final{
        grid-column: 2 / -1;
    }

    @media (max-width: 992px) {




        .bento{


            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr 1fr 1fr 1fr;


        }


        .inspiracion{


        }


        .sesion_1{


        }


        .crear_carteles{
            grid-column: span 2;
        }


        .sesion_2{
            grid-column: 2 / 3;
            grid-row: -4 / -3;
        }


        .contenido_final{
            grid-column: 1 / -1;
        }


    }

</style>




